<!doctype html>
<title>Clue-Less</title>
<h1>Who done it?</h1>
<form name=accuse-form id=accuse-form class="form-inline" method="POST" action="/">
    <label for="player">Please enter your name:</label>
    <input name="player" id="player" required><br><br>
    <label for="suspect">Please select the person you want to suspect:</label>
    <select name="suspect" id="suspect" form_id=accuse-form>
      {% for name in names %}
      <option value="{{ name }}">{{ name }}</option>
      {% endfor %}
    </select><br><br>
    <label for="weapon">Please select the weapon his/her used:</label>
    <select name="weapon" id="weapon" form_id=accuse-form>
      {% for weapon in weapons %}
      <option value="{{ weapon }}">{{ weapon }}</option>
      {% endfor %}
    </select><br><br>
    <label for="room">Please select the Room his/her used it in:</label>
    <select name="room" id="room" form_id=accuse-form>
      {% for room in rooms %}
      <option value="{{ room }}">{{ room }}</option>
      {% endfor %}
    </select><br><br>
    <input type="submit" value="Guess">
  </form>
